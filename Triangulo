#include <stdio.h>
#include<math.h>
int main() {
    float A,B,C,PERIMETRO,AREA;
    scanf("%f %f %f",&A,&B,&C);
    if((A)<(B+C) && (B)<(A+C) && (C)<(A+B)){
        PERIMETRO=(A+B+C);
        printf("Perimetro = %.1f\n",PERIMETRO);
    }else{
        AREA=((A+B)*C)/2;
        printf("Area = %.1f\n",AREA);
    }
    return 0;
}
